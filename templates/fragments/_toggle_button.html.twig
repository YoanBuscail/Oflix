{% if app.session.get("favorite")[movie.id] is defined%}

	{# ici j'ai le bouton pour supprimer si le film est déjà dans les favoris #}
	<a href="{{path('app_favorites_delete',{id:movie.id})}}" class="movie__favorite fs-1 my-2 mx-3 link-danger">
		<i class="bi bi-bookmark-x-fill"></i>
	</a>
{% else %}
	<a href="{{path('app_favorites_add',{id:movie.id})}}" class="movie__favorite fs-1 my-2 mx-3 link-danger">
		<i class="bi bi-bookmark-plus"></i>
	</a>
{% endif %}
