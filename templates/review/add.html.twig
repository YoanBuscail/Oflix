{% extends 'base.html.twig' %}

{% block title %}Ajouter une critique pour {{ movie.title }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajouter une critique pour {{ movie.title }}</h1>

    {# Ouverture de balise form #}
    {{ form_start(form) }}
        {{ form_widget(form) }}

    {# On ajoute manuellement le bouton submit #}
    <button type="submit" class="btn btn-success">Ajouter la critique</button>
    {# Fermeture du formulaire #}
    {{ form_end(form) }}
</div>
{% endblock %}